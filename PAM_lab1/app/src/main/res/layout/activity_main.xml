<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bt_notif"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0000ffff"
        android:text="Notification"
        android:textColor="#000000"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_sebar"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="SEARCH SOMETHING HERE"
        android:textColor="#000000"
        android:textColorHighlight="#0C0C0C"
        android:textColorHint="#979797"
        android:textColorLink="#000000"
        android:textSize="16sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_search"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:backgroundTint="#0000ffff"
        android:text="Search"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="40dp"
        android:layout_height="47dp"
        android:backgroundTint="#0000ffff"
        android:text="X"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />

    <Button
        android:id="@+id/camera_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:background="#0000ffff"
        android:backgroundTint="#0000ffff"
        android:rotationX="0"
        android:shadowColor="#0000ffff"
        android:text="ðŸ“·"
        android:textColorHighlight="#0000ffff"
        android:textColorHint="#0000ffff"
        android:textColorLink="#0000ffff"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:rippleColor="#0000ffff"
        app:strokeColor="#0000ffff" />

    <Button
        android:id="@+id/bt_next"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="17dp"
        android:layout_height="29dp"
        android:layout_marginTop="624dp"
        android:backgroundTint="#0000ffff"
        android:text="âž¾"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>